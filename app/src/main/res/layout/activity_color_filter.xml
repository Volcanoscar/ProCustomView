<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="me.chenqichao.procustomview.activity.subactivity1.ColorFilterActivity">

    <Button
        android:id="@+id/btn_demo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简单示例"/>

    <Button
        android:id="@+id/btn_demo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_demo1"
        android:text="复杂示例"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_demo2"
        android:text="下一个效果"
        android:visibility="invisible"/>

    <me.chenqichao.procustomview.view.view2.ColorFilterView1
        android:id="@+id/cfv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_demo1"/>

    <me.chenqichao.procustomview.view.view2.ColorFilterView2
        android:id="@+id/cfv2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_demo1"/>

</RelativeLayout>
